{"remainingRequest":"D:\\WORK\\Websites\\Pomodoro\\node_modules\\vue-loader\\lib\\index.js??vue-loader-options!D:\\WORK\\Websites\\Pomodoro\\src\\App.vue?vue&type=script&lang=js&","dependencies":[{"path":"D:\\WORK\\Websites\\Pomodoro\\src\\App.vue","mtime":1641321843406},{"path":"D:\\WORK\\Websites\\Pomodoro\\node_modules\\cache-loader\\dist\\cjs.js","mtime":1641316374420},{"path":"D:\\WORK\\Websites\\Pomodoro\\node_modules\\babel-loader\\lib\\index.js","mtime":1641316375727},{"path":"D:\\WORK\\Websites\\Pomodoro\\node_modules\\cache-loader\\dist\\cjs.js","mtime":1641316374420},{"path":"D:\\WORK\\Websites\\Pomodoro\\node_modules\\vue-loader\\lib\\index.js","mtime":1641316367914}],"contextDependencies":[],"result":[{"type":"Buffer","data":"base64:"},{"version":3,"sources":["App.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;AAqBA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"App.vue","sourceRoot":"src","sourcesContent":["<template>\r\n  <div id=\"app\">\r\n    <div class=\"card\">\r\n      <div class=\"center\">\r\n        <p>Cycles {{ cycle }}</p>\r\n        <h1>Hello Pomodoro</h1>\r\n        <p>Status: {{ status }}</p>\r\n      </div>\r\n      <!-- get a minute & a second from timer -->\r\n      <h1>{{ Math.floor(timer / 60) }}:{{ Math.floor(timer % 60) }}</h1>\r\n\r\n      <div class=\"center\">\r\n        <button v-on:click=\"start()\">Start timer</button>\r\n        <button v-on:click=\"pause()\">Pause timer</button>\r\n        <button v-on:click=\"reset()\">Reset cycles</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nlet counter;\r\nexport default {\r\n  name: \"App\",\r\n  data() {\r\n    return {\r\n      timer: 3,\r\n      cycle: 0,\r\n      status: \"study\",\r\n    };\r\n  },\r\n  methods: {\r\n    start() {\r\n      this.stop();\r\n      counter = setInterval(() => {\r\n        if (this.timer === 0) {\r\n          this.pause();\r\n          this.cycle++;\r\n          this.toggle();\r\n          this.restart();\r\n          this.start();\r\n        } else {\r\n          this.timer--;\r\n        }\r\n      }, 1000);\r\n    },\r\n    pause() {\r\n      clearInterval(counter);\r\n    },\r\n    reset() {\r\n      this.restart();\r\n      this.cycle = 0;\r\n      this.status = \"study\";\r\n    },\r\n    restart() {\r\n      clearInterval(counter);\r\n      this.timer = 3;\r\n    },\r\n    toggle() {\r\n      // if cycle=even, status=study\r\n      if (this.cycle % 2 === 0) {\r\n        this.status = \"study\";\r\n      } else {\r\n        this.status = \"break\";\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\nhtml {\r\n  overflow: hidden;\r\n}\r\n#app {\r\n  font-family: Avenir, Helvetica, Arial, sans-serif;\r\n  -webkit-font-smoothing: antialiased;\r\n  -moz-osx-font-smoothing: grayscale;\r\n  height: 100vh;\r\n  width: 100vw;\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  color: #31000baf;\r\n  background-image: url(\"../src/assets/bg-fruit.jpg\");\r\n}\r\n.card {\r\n  width: 50%;\r\n  height: 50%;\r\n  background: rgba(250, 219, 228, 0.8);\r\n  box-shadow: 1px 2px 3px rgba(49, 0, 11, 0.5);\r\n  border-radius: 20px;\r\n  padding: 20px;\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.center {\r\n  text-align: center;\r\n  width: 100%;\r\n  display: flex;\r\n  justify-content: space-evenly;\r\n  align-items: center;\r\n}\r\nbutton {\r\n  padding: 10px;\r\n  border: none;\r\n  background-color: rgba(255, 121, 161, 0.5);\r\n  box-shadow: 1px 2px 3px rgba(49, 0, 11, 0.5);\r\n  border-radius: 10px;\r\n  color: #31000baf;\r\n}\r\nbutton:hover {\r\n  box-shadow: inset 1px 2px 3px rgba(49, 0, 11, 0.5);\r\n}\r\n@media screen and (max-width: 1000px) {\r\n  .card {\r\n    width: 70%;\r\n  }\r\n}\r\n@media screen and (max-width: 600px) {\r\n  .card {\r\n    width: 100%;\r\n  }\r\n}\r\n</style>\r\n"]}]}